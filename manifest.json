{
    "name": "练手项目",
    "description": "这是一个扩展程序",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "./popup/index.html",
        "default_icon": {
            "16": "/images/logo.png",
            "32": "/images/logo32.png",
            "48": "/images/logo48.png"
        }
    },
    "icons": {
        "16": "/images/logo.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png"
    },
    "options_page": "/options/options.html"
}